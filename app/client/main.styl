@require 'nib'
@require 'axis'
@require 'rupture'
@require 'jeet'

normalize-css()

*
    box-sizing border-box

html, body
    padding 0
    margin 0

body
    font-family "Source Sans Pro"

section
    padding 0.5rem 1rem

input.error
    background-color pink

#topbar
    background-color #ccc
    padding 3px 5px
    display table
    width 100%

    #login-buttons
    #connection-status
        display table-cell

    #connection-status
        text-align right

        &.connected
            color green
        &.waiting
            color red
        &.failed
            color darkgrey

#splash
    #splash-login
        button green

#stats
    .round-results
        &:after
            content: ', '
        &:last-child:after
            content: none

    #redeem-streak
        button green

    #risk-streak
        button orange

#currentGame
    .button
        col(1/3)
        button lightsteelblue
        font-size 10vw

        &.selected
            button green
            font-size 10vw
            cursor wait

        &.not-selected
            button lightgrey
            font-size 10vw
            cursor wait
